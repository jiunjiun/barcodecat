== simple_form_for([:admin, event, product], html: { autocomplete: 'off' }) do |f|
  .panel.colourable
    .panel-heading
      span.panel-title= t('simple_form.labels.product.info')
    .panel-body
      == f.input :name, required: true
      == f.input :desc, required: false
      == f.input :url, required: true, as: :url
      == f.input :banner, as: :file
      == f.input :banner_style do
        br/
        == f.select :banner_style, KeyValues::Product::BannerStyle.id_options
      - if product.banner.present?
        == link_to product.banner.url, target: '_blank' do
          == image_tag product.banner.small, class: 'img-thumbnail'

  br/
  .row
    .col-md-12
      == f.button :submit, class: 'btn-success btn-3d'
      | &nbsp;&nbsp;
      == link_to t('helpers.back'), admin_event_path(event), class: 'btn btn-default btn-3d'
